<style type="text/css">
#ppid {
    position: absolute;
    bottom: 10px;
    right: 10px;
    font-size: 12px;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
}
a#togglePPID {
  display: block; 
  float: left;
  width: 25px;
  height: 25px;
  background-size: cover;
  background-image: url("data:image/svg+xml;base64,")
}

#crt {
   background: white;
   border-left: 2px solid #832FF4;
   padding: 5px;
   margin-left: 30px;
}

.ray {
	word-break: break-word;
}
</style>

<script>
  function togglePPID() {
  var crt = document.getElementById("crt");
  if (crt.style.display === "none") {
    crt.style.display = "block";
  } else {
    crt.style.display = "none";
  }
}</script>
<div id="ppid">
  <a id="togglePPID" href="#" onclick="togglePPID()"></a>
    <div id="crt" style="display:none;">
      <div class="ray"><strong>Build ID: </strong><%= build_id %></div>
      <div class="ray"><strong>Context: </strong><%= context %></div>
      <div class="ray"><strong>Commit: </strong>...<%= commit_ref.substring(commit_ref.length - 10); %></div>
      <div class="ray"><strong>Deploy ID: </strong><%= deploy_id %></div>
    </div>
</div>